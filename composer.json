{
    "name": "streamich/json-joy",
    "description": "JSON Pointer, JSON Patch and JSON Operation Transformations in native PHP",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^2.17"
    },
    "authors": [
        {
            "name": "streamich",
            "email": "streamich@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=auto tests/unit",
        "cs-fix": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix . -vv || true",
        "cs-lint": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix --diff --stop-on-violation --verbose --dry-run"
    }
}
